# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
# OPENAI_MODEL: Which GPT model to use for the concierge agent
# Options (from cheapest to most expensive):
#   - gpt-5-nano             (recommended for demos - latest nano model)
#   - gpt-4o-mini            (good balance of cost/performance)
#   - gpt-4o                 (faster, more capable)
#   - gpt-4-turbo            (advanced features)
#   - gpt-4                  (most expensive, legacy)
# If not set, defaults to gpt-5-nano
OPENAI_MODEL=gpt-5-nano

# Embedding model for vector search (keep as-is for best cost/performance)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
LOG_LEVEL=INFO
